   {
     "compilerOptions": {
       "baseUrl": ".",
       "target": "ES2017",
       "module": "ESNext",
       "jsx": "react-jsx",
       "strict": true,
       "esModuleInterop": true,
       "allowSyntheticDefaultImports": true,
       "skipLibCheck": true,
       "resolveJsonModule": true,
       "moduleResolution": "node",
       "outDir": "./dist",
       "declaration": true,
       "declarationDir": "./types/generated",
       "declarationMap": true,
       "sourceMap": true
     },
     "include": ["src/**/*", "types/handcrafted/**/*"],
     "exclude": ["types/generated/**/*"]
   }